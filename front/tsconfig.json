{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "paths": {
      "*": ["src/*"]
    },
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", "webpack"],
  "rootDirs": ["src"],
  "baseUrl": "src"
}
